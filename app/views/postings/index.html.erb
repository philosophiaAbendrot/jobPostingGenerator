<p id="notice"><%= notice %></p>

<h1>Postings</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Position name</th>
      <th>Link</th>
      <th>Summary</th>
      <th>Summary name</th>
      <th>Qualifications</th>
      <th>Qualifications name</th>
      <th>Duties</th>
      <th>Duties name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postings.each do |posting| %>
      <tr>
        <td><%= posting.company_name %></td>
        <td><%= posting.position_name %></td>
        <td><%= posting.link %></td>
        <td><%= posting.summary %></td>
        <td><%= posting.summary_name %></td>
        <td><%= posting.qualifications %></td>
        <td><%= posting.qualifications_name %></td>
        <td><%= posting.duties %></td>
        <td><%= posting.duties_name %></td>
        <td><%= link_to 'Show', posting %></td>
        <td><%= link_to 'Edit', edit_posting_path(posting) %></td>
        <td><%= link_to 'Destroy', posting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Posting', new_posting_path %>
