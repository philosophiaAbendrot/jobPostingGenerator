<%= form_with(model: posting, local: true, class: 'form-group') do |form| %>
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 offset-lg-2 offset-md-1">
      <% if posting.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(posting.errors.count, "error") %> prohibited this posting from being saved:</h2>

        <ul>
          <% posting.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="field">
        <%= form.label :company_name %>
        <%= form.text_field :company_name, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :position_name %>
        <%= form.text_field :position_name, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :link %>
        <%= form.text_area :link, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :summary %>
        <%= form.text_area :summary, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :summary_name %>
        <%= form.text_field :summary_name, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :qualifications %>
        <%= form.text_area :qualifications, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :qualifications_name %>
        <%= form.text_field :qualifications_name, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :duties %>
        <%= form.text_area :duties, class: 'form-control' %>
      </div>

      <div class="field">
        <%= form.label :duties_name %>
        <%= form.text_field :duties_name, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
